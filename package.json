{
  "name": "athena-mcp-registry",
  "version": "1.0.0",
  "description": "MCP Registry with Fastify, TypeScript, and SQLite",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "pnpm migrate:run && ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:quick": "vitest run --reporter=dot",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "migrate:run": "ts-node-dev --transpile-only src/scripts/migrate.ts",
    "migrate:status": "ts-node-dev --transpile-only src/scripts/migrate.ts status",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "registry",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "@sentry/node": "^10.23.0",
    "better-sqlite3": "^12.4.1",
    "fastify": "^5.6.2",
    "pino": "^10.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
